{
  "include": ["."],
  "exclude": ["**/dist/**"],
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "types": ["vite/client", "node"],
    "paths": {
      "~utils": ["./test-utils.ts"]
    }
  }
}
